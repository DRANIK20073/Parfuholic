<Page x:Class="Parfuholic.Pages.AdminOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы пользователей"
      Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Управление заказами"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Таблица заказов -->
        <DataGrid x:Name="OrdersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Orders}"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowHeight="40"
                  FontSize="14"
                  Margin="0,0,0,20">

            <!-- Колонки заказов -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding OrderID}" 
                                    IsReadOnly="True"
                                    Width="50"/>
                <DataGridTextColumn Header="Дата" 
                                    Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy HH:mm}" 
                                    IsReadOnly="True"
                                    Width="120"/>
                <DataGridTextColumn Header="Сумма" 
                                    Binding="{Binding TotalSum, StringFormat=F2}" 
                                    IsReadOnly="True"
                                    Width="100"/>
                <DataGridTemplateColumn Header="Статус" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Loaded="StatusComboBox_Loaded"
                                      FontSize="14"
                                      Height="30"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <!-- Детали заказа (товары) -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="#FFF5F5F5" 
                            Padding="20,10"
                            Margin="10,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Товары в заказе:" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding Items}" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      FontSize="14">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Товар" 
                                                        Binding="{Binding Perfume.Name}" 
                                                        Width="200"/>
                                    <DataGridTextColumn Header="Цена" 
                                                        Binding="{Binding Perfume.Price, StringFormat=F2}" 
                                                        Width="80"/>
                                    <DataGridTextColumn Header="Скидка" 
                                                        Binding="{Binding Perfume.DiscountPercent, StringFormat='{}{0}%'}" 
                                                        Width="70"/>
                                    <DataGridTextColumn Header="Количество" 
                                                        Binding="{Binding Quantity}" 
                                                        Width="90"/>
                                    <DataGridTextColumn Header="Итого" 
                                                        Binding="{Binding TotalPrice, StringFormat=F2}" 
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Кнопка сохранения -->
        <Button Grid.Row="2"
                Content="Сохранить изменения"
                Height="45"
                Width="220"
                FontSize="16"
                BorderThickness="2"
                Background="White"
                HorizontalAlignment="Left"
                Click="SaveChangesButton_Click"/>
    </Grid>
</Page>