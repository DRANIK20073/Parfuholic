<Page x:Class="Parfuholic.UserCabinetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= LEFT MENU ================= -->
        <StackPanel>

            <TextBlock Text="Имя"
                       FontSize="22"
                       FontWeight="Bold"/>

            <TextBlock Text="Фамилия"
                       FontSize="22"
                       Margin="0,0,0,10"
                       FontWeight="Bold"/>

            <TextBlock Text="Личные данные"
                       FontSize="16"
                       Margin="0,5"
                       Cursor="Hand"
                       FontWeight="SemiBold"/>

            <TextBlock Text="Мои покупки"
                       FontSize="16"
                       Margin="0,5"
                       Cursor="Hand"
                       FontWeight="SemiBold"/>

            <TextBlock Text="Избранное"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,5"
                       Cursor="Hand"/>

            <TextBlock Text="Выйти"
                       FontSize="16"
                       Margin="0,5"
                       FontWeight="SemiBold"
                       Cursor="Hand"
                       MouseDown="Logout_Click"/>
        </StackPanel>

        <!-- ================= RIGHT CONTENT ================= -->
        <StackPanel Grid.Column="1">

            <TextBlock Text="МОЙ КАБИНЕТ"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="избранное"
                       FontSize="18"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <!-- PRODUCTS -->
            <WrapPanel>

                <Border Width="220" Margin="10" Background="#F5F5F5">
                    <StackPanel>
                        <Border Height="220" Background="#EDEDED"/>
                        <TextBlock Text="JEAN PAUL GAULTIER le beau"
                                   FontWeight="Bold"
                                   Margin="10,10,10,0"/>
                        <TextBlock Text="28,81 BYN"
                                   Margin="10,0,10,10"/>
                    </StackPanel>
                </Border>

                <Border Width="220" Margin="10" Background="#F5F5F5">
                    <StackPanel>
                        <Border Height="220" Background="#EDEDED"/>
                        <TextBlock Text="HIPSTER aquatic pomade"
                                   FontWeight="Bold"
                                   Margin="10,10,10,0"/>
                        <TextBlock Text="49,00 BYN"
                                   Margin="10,0,10,10"/>
                    </StackPanel>
                </Border>

            </WrapPanel>

        </StackPanel>
    </Grid>
</Page>
