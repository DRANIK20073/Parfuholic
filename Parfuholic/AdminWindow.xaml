<Window x:Class="Parfuholic.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parfuholic — Admin"
        WindowState="Maximized"
        Background="#FFF5F5F5">

    <!-- ===== СТИЛИ ===== -->
    <Window.Resources>

        <Style x:Key="AdminMenuButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Normal"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== ЛЕВОЕ МЕНЮ ===== -->
        <Border Background="White">
            <StackPanel>

                <TextBlock Text="ADMIN"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="30,30,0,40"/>

                <Button Content="Пользователи"
                        Click="Users_Click"
                        Style="{StaticResource AdminMenuButton}"/>

                <Button Content="Заказы пользователей"
                        Click="Orders_Click"
                        Style="{StaticResource AdminMenuButton}"/>

                <Button Content="Товары"
                        Click="Products_Click"
                        Style="{StaticResource AdminMenuButton}"/>

                <Button Content="Добавить товар"
                        Click="AddPerfume_Click"
                        Style="{StaticResource AdminMenuButton}"/>

                <Button Content="Отчёты"
                        Click="Reports_Click"
                        Style="{StaticResource AdminMenuButton}"/>

                <Separator Margin="20"/>

                <Button Content="Выйти"
                        Click="Logout_Click"
                        Style="{StaticResource AdminMenuButton}"/>

            </StackPanel>
        </Border>

        <!-- ===== КОНТЕНТ ===== -->
        <Frame x:Name="AdminFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#FFF5F5F5"/>

    </Grid>

</Window>
