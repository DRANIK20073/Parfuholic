<Page x:Class="Parfuholic.Pages.UserCabinetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Page.Resources>

        <!-- Стиль кнопок меню профиля -->
        <Style x:Key="ProfileMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Style.Triggers>
                <!-- Наведение -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>

                <!-- Активная кнопка -->
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Margin="40">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВОЕ МЕНЮ -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Имя"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock Text="Фамилия"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,0"/>

            <Button x:Name="ProfileBtn"
                    Content="Личные данные"
                    Style="{StaticResource ProfileMenuButton}"
                    Click="Profile_Click"/>

            <Button x:Name="OrdersBtn"
                    Content="История заказов"
                    Style="{StaticResource ProfileMenuButton}"
                    Click="Orders_Click"/>

            <Button x:Name="FavoritesBtn"
                    Content="Избранное"
                    Style="{StaticResource ProfileMenuButton}"
                    Click="Favorites_Click"/>

            <Button Content="Выйти"
                    Style="{StaticResource ProfileMenuButton}"
                    Click="Logout_Click"/>
        </StackPanel>

        <!-- ПРАВАЯ ЧАСТЬ -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ЗАГОЛОВОК (ВСЕГДА ВИДЕН) -->
            <TextBlock Text="МОЙ КАБИНЕТ"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <!-- КОНТЕНТ -->
            <Frame x:Name="CabinetFrame"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Page>
