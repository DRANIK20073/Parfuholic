<Page x:Class="Parfuholic.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:Parfuholic.Models"
      Background="#FFF5F5F5">

    <Grid Margin="60,40,60,40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- КНОПКА НАЗАД -->
        <Button x:Name="BackButton"
                Content="←"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="40"
                Height="40"
                FontWeight="Bold"
                FontSize="20"
                Background="Black"
                Foreground="White"
                BorderBrush="Black"
                BorderThickness="2"
                Click="BackButton_Click"
                Grid.Column="0"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="White"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="Black"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- ================= ЛЕВАЯ ЧАСТЬ — ТОВАРЫ ================= -->
        <StackPanel Grid.Column="0" Margin="0,50,0,0">

            <TextBlock Text="КОРЗИНА"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- Сообщение если корзина пуста -->
            <TextBlock x:Name="EmptyCartMessage"
                       Text="Ваша корзина пуста"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="Gray"
                       Visibility="Collapsed"/>

            <ItemsControl ItemsSource="{Binding CartItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:CartItem}">
                        <Border Background="White"
                                BorderBrush="#FFE0E0E0"
                                BorderThickness="1"
                                Padding="20"
                                Margin="0,0,0,15"
                                CornerRadius="0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фото -->
                                <Border Width="160"
                                        Height="160"
                                        Background="#FFF0F0F0"
                                        Padding="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Image Source="{Binding Perfume.Image}"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>


                                <!-- Инфо -->
                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock Text="ПАРФЮМЕРНАЯ ВОДА"
                                               Foreground="Gray"
                                               FontSize="12"
                                               Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Perfume.Brand}"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="{Binding Perfume.Name}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Margin="0,2,0,5"/>

                                    <TextBlock Text="{Binding Perfume.Volume}"
                                               Foreground="Gray"
                                               FontSize="14"
                                               Margin="0,0,0,10"/>

                                    <!-- Цены -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Новая цена -->
                                        <TextBlock Grid.Column="0"
                                           Text="{Binding Price, StringFormat='{}{0:F2} BYN'}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#000000"
                                           VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Perfume.IsDiscount}" Value="True">
                                                            <Setter Property="Foreground" Value="#000000"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Старая цена-->
                                        <TextBlock Grid.Column="2"
                                           Text="{Binding Perfume.Price, StringFormat='{}{0:F2} BYN'}"
                                           Foreground="Gray"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           TextDecorations="Strikethrough"
                                           VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Perfume.IsDiscount}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>

                                <!-- Управление количеством -->
                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10">
                                        <Button Content="-"
                                                Width="30"
                                                Height="30"
                                                Background="Black"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                FontSize="14"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Tag="{Binding}"
                                                Click="DecreaseQuantity_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#333333"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <TextBlock Text="{Binding Quantity}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Width="40"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <Button Content="+"
                                                Width="30"
                                                Height="30"
                                                Background="Black"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                FontSize="14"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Tag="{Binding}"
                                                Click="IncreaseQuantity_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#333333"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>

                                    <Button Content="УДАЛИТЬ"
                                            Width="100"
                                            Height="30"
                                            Background="Transparent"
                                            Foreground="Gray"
                                            FontSize="12"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            Cursor="Hand"
                                            Tag="{Binding}"
                                            Click="RemoveItem_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- ================= ПРАВАЯ ЧАСТЬ — ОФОРМЛЕНИЕ ================= -->
        <StackPanel Grid.Column="2" Margin="0,50,0,0">

            <TextBlock Text="ОФОРМЛЕНИЕ ЗАКАЗА"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Поля формы -->
            <StackPanel>
                <TextBlock Text="Телефон"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneBox"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"/>

                <TextBlock Text="Email"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <TextBox x:Name="EmailBox"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"/>

                <TextBlock Text="Имя"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <TextBox x:Name="FirstNameBox"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"/>

                <TextBlock Text="Фамилия"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <TextBox x:Name="LastNameBox"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"/>

                <TextBlock Text="Город"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <TextBox x:Name="CityBox"
                         Height="40"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"/>

                <TextBlock Text="Адрес"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <TextBox x:Name="AddressBox"
                         Height="60"
                         FontSize="14"
                         Padding="10"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            <!-- Итог -->
            <Border Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Padding="25"
                    Margin="0,30,0,0">
                <StackPanel>

                    <!-- Заголовок -->
                    <TextBlock Text="СУММА ЗАКАЗА"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

                    <!-- Стоимость товаров (ItemsTotal) -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Стоимость товаров"
                                   FontSize="14"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding OriginalTotal, StringFormat='{}{0:F2} BYN'}"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </Grid>

                    <!-- Скидка -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Скидка"
                                   FontSize="14"
                                   Foreground="Black"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding DiscountSum, StringFormat='- {0:F2} BYN'}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="Black"/>
                    </Grid>

                    <Separator Height="1"
                               Background="#E0E0E0"
                               Margin="0,10,0,15"/>

                    <!-- ИТОГО -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Текст "ИТОГО" -->
                        <TextBlock Text="ИТОГО"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Grid.Column="0" />

                        <!-- Новая цена и старая рядом -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                            <!-- Новая цена -->
                            <TextBlock Text="{Binding TotalSum, StringFormat='{}{0:F2} BYN'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#000000" />

                            <!-- Старая цена перечеркнутая, показывается только если есть скидка -->
                            <TextBlock Text="{Binding OriginalTotal, StringFormat='{}{0:F2} BYN'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       TextDecorations="Strikethrough">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>


                    <!-- Кнопка оформления заказа -->
                    <Button Content="ОФОРМИТЬ ЗАКАЗ"
                            Height="50"
                            Margin="0,20,0,0"
                            Background="Black"
                            Foreground="White"
                            FontSize="16"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CheckoutButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555555"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>