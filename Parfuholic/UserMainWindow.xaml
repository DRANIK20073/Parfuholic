<Window x:Class="Parfuholic.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parfuholic"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinWidth="1280"
        MinHeight="800"
        Background="#FFF5F5F5">

    <!-- ================= СТИЛИ ================= -->
    <Window.Resources>

        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ProductCard" TargetType="Border">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
        </Style>

    </Window.Resources>

    <!-- ================= РАЗМЕТКА ================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="White" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="LogoButton"
                        Content="PARFUHOLIC"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="28"
                        FontWeight="Bold"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Click="LogoButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>


                <!-- SEARCH -->
                <Grid Grid.Column="1" Margin="40,0" VerticalAlignment="Center">
                    <TextBox x:Name="SearchBox"
                             Height="44"
                             FontSize="16"
                             Padding="15,0"
                             VerticalContentAlignment="Center"
                             Background="#FFF0F0F0"
                             BorderThickness="0"/>

                    <TextBlock Text="Поиск парфюма"
                               FontSize="14"
                               Margin="18,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- ACCOUNT + CART -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <!-- АККАУНТ -->
                    <Button Width="44"
                            Height="44"
                            Background="White"
                            BorderThickness="1"
                            Click="AccountButton_Click">
                        <TextBlock Text="👤"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>

                    <Button Content="Корзина"
                            Style="{StaticResource HeaderButton}"
                            Click="CartButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CATEGORIES -->
        <Border Grid.Row="1" Background="White" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Все"
                Style="{StaticResource CategoryButton}"
                Tag="All"
                Click="Category_Click"/>

                <Button Content="Женские"
                Style="{StaticResource CategoryButton}"
                Tag="для женщин"
                Click="Category_Click"/>

                <Button Content="Мужские"
                Style="{StaticResource CategoryButton}"
                Tag="для мужчин"
                Click="Category_Click"/>

                <Button Content="Унисекс"
                Style="{StaticResource CategoryButton}"
                Tag="унисекс"
                Click="Category_Click"/>

                <Button Content="Новинки"
                Style="{StaticResource CategoryButton}"
                Tag="New"
                Click="Category_Click"/>

                <Button Content="Скидки"
                Style="{StaticResource CategoryButton}"
                Tag="Discount"
                Click="Category_Click"/>
            </StackPanel>
        </Border>

        <!-- ================= CONTENT ================= -->
        <Frame x:Name="CatalogFrame"
               Grid.Row="2"
               NavigationUIVisibility="Hidden"
               JournalOwnership="OwnsJournal"/>

        <Frame x:Name="UserCabinetFrame"
               Grid.Row="2"
               NavigationUIVisibility="Hidden"
               JournalOwnership="OwnsJournal"/>


    </Grid>
</Window>
