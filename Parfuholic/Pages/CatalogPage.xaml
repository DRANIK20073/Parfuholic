<Page x:Class="Parfuholic.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <WrapPanel Margin="30" HorizontalAlignment="Left">

            <!-- КАРТОЧКА -->
            <Border Width="260"
                    Margin="15"
                    Background="White"
                    CornerRadius="12">

                <StackPanel>
                    <!-- Фото -->
                    <Border Height="220"
                            Background="#FFEDEDED"
                            CornerRadius="12,12,0,0">
                        <TextBlock Text="Фото"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"/>
                    </Border>

                    <!-- Инфо -->
                    <StackPanel Margin="15">
                        <TextBlock Text="Dior Sauvage"
                                   FontSize="16"
                                   FontWeight="Bold"/>

                        <TextBlock Text="100 ml"
                                   Foreground="Gray"
                                   Margin="0,5"/>

                        <TextBlock Text="12 500 ₽"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- КОПИРУЙ КАРТОЧКИ -->
            <Border Width="260"
                    Margin="15"
                    Background="White"
                    CornerRadius="12">
                <StackPanel>
                    <Border Height="220" Background="#FFEDEDED"/>
                    <StackPanel Margin="15">
                        <TextBlock Text="Chanel Bleu"/>
                        <TextBlock Text="100 ml"/>
                        <TextBlock Text="14 900 ₽"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </WrapPanel>
    </ScrollViewer>

</Page>
