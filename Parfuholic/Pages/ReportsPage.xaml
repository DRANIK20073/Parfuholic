<Page x:Class="Parfuholic.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF5F5F5"
      Title="Отчёты">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Фильтр по дате ===== -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <TextBlock Text="С:" VerticalAlignment="Center" FontSize="16" Margin="0,0,5,0"/>
            <DatePicker x:Name="StartDatePicker" Margin="0,0,20,0"/>
            <TextBlock Text="По:" VerticalAlignment="Center" FontSize="16" Margin="0,0,5,0"/>
            <DatePicker x:Name="EndDatePicker" Margin="0,0,20,0"/>
            <Button Content="Показать отчёт" Click="GenerateReport_Click" Padding="10,5"/>
        </StackPanel>

        <!-- ===== Таблица отчёта ===== -->
        <DataGrid x:Name="ReportsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeight="30">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="120"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding Product}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Total}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
