<Page x:Class="Parfuholic.Pages.ProfileDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40,0,40,40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Личные данные"
                       FontSize="28"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Форма -->
            <StackPanel Grid.Row="1" Width="500">

                <!-- Имя -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="FirstNameBox"
                             Height="40"
                             FontSize="18"
                             VerticalContentAlignment="Center"
                             BorderThickness="0,0,0,1"/>
                    <TextBlock Text="Имя"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=FirstNameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Фамилия -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="LastNameBox"
                             Height="40"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             BorderThickness="0,0,0,1"/>
                    <TextBlock Text="Фамилия"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=LastNameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Отчество -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="MiddleNameBox"
                             Height="40"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             BorderThickness="0,0,0,1"/>
                    <TextBlock Text="Отчество"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=MiddleNameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Email -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="EmailBox"
                             Height="40"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             BorderThickness="0,0,0,1"/>
                    <TextBlock Text="Email"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=EmailBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Адрес доставки -->
                <Grid Margin="0,0,0,40">
                    <TextBox x:Name="AddressBox"
                             Height="40"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             BorderThickness="0,0,0,1"/>
                    <TextBlock Text="Адрес доставки"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=AddressBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Кнопка сохранить -->
                <Button Content="Сохранить изменения"
                        Height="45"
                        Width="220"
                        HorizontalAlignment="Right"
                        BorderThickness="2"
                        Background="White"
                        FontSize="16"/>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
