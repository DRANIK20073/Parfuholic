<Window x:Class="Parfuholic.NavigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parfuholic"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinWidth="1280"
        MinHeight="800"
        Background="#FFF5F5F5">

    <!-- ================= СТИЛИ ================= -->
    <Window.Resources>

        <!-- Кнопки в шапке -->
        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <!-- Кнопки категорий -->
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,6"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Карточка товара -->
        <Style x:Key="ProductCard" TargetType="Border">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
        </Style>

    </Window.Resources>

    <!-- ================= РАЗМЕТКА ================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- HEADER -->
        <Border Background="White" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PARFUHOLIC"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <Grid Grid.Column="1" Margin="40,0" VerticalAlignment="Center">

                    <!-- TextBox -->
                    <TextBox x:Name="SearchBox"
                         Height="44"
                         FontSize="16"
                         Padding="15,0"
                         VerticalContentAlignment="Center"
                         Background="#FFF0F0F0"
                         BorderThickness="0"/>

                    <!-- Placeholder -->
                    <TextBlock Text="Поиск парфюма"
                       FontSize="14"
                       Margin="18,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       IsHitTestVisible="False">

                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <!-- по умолчанию скрыт -->
                                <Setter Property="Visibility" Value="Collapsed"/>

                                <Style.Triggers>
                                    <!-- показываем ТОЛЬКО когда пусто -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}"
                                 Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>

                    </TextBlock>

                </Grid>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Войти" Style="{StaticResource HeaderButton}" Click="LoginButton_Click"/>
                    <Button Content="Корзина" Style="{StaticResource HeaderButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CATEGORIES -->
        <Border Grid.Row="1" Background="White" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Женские" Style="{StaticResource CategoryButton}"/>
                <Button Content="Мужские" Style="{StaticResource CategoryButton}"/>
                <Button Content="Унисекс" Style="{StaticResource CategoryButton}"/>
                <Button Content="Новинки" Style="{StaticResource CategoryButton}"/>
                <Button Content="Скидки" Style="{StaticResource CategoryButton}"/>
            </StackPanel>
        </Border>

        <!-- PRODUCTS -->
        <ScrollViewer Margin="35,0,0,0" Grid.Row="2">
            <WrapPanel HorizontalAlignment="Left" Margin="20">

                <Border Style="{StaticResource ProductCard}">
                    <StackPanel>
                        <Border Height="220"
                                Background="#FFEDEDED"
                                CornerRadius="12,12,0,0">
                            <TextBlock Text="Фото"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"/>
                        </Border>

                        <StackPanel Margin="15">
                            <TextBlock Text="Dior Sauvage"
                                       FontWeight="Bold"
                                       FontSize="16"/>
                            <TextBlock Text="100 ml"
                                       Foreground="Gray"
                                       Margin="0,5"/>
                            <TextBlock Text="12 500 ₽"
                                       FontWeight="Bold"
                                       FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ProductCard}">
                    <StackPanel>
                        <Border Height="220"
                            Background="#FFEDEDED"
                            CornerRadius="12,12,0,0">
                            <TextBlock Text="Фото"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                        </Border>

                        <StackPanel Margin="15">
                            <TextBlock Text="Dior Sauvage"
                               FontWeight="Bold"
                               FontSize="16"/>
                            <TextBlock Text="100 ml"
                               Foreground="Gray"
                               Margin="0,5"/>
                            <TextBlock Text="12 500 ₽"
                               FontWeight="Bold"
                               FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ProductCard}">
                    <StackPanel>
                        <Border Height="220"
                            Background="#FFEDEDED"
                            CornerRadius="12,12,0,0">
                            <TextBlock Text="Фото"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                        </Border>

                        <StackPanel Margin="15">
                            <TextBlock Text="Dior Sauvage"
                               FontWeight="Bold"
                               FontSize="16"/>
                            <TextBlock Text="100 ml"
                               Foreground="Gray"
                               Margin="0,5"/>
                            <TextBlock Text="12 500 ₽"
                               FontWeight="Bold"
                               FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ProductCard}">
                    <StackPanel>
                        <Border Height="220"
                            Background="#FFEDEDED"
                            CornerRadius="12,12,0,0">
                            <TextBlock Text="Фото"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                        </Border>

                        <StackPanel Margin="15">
                            <TextBlock Text="Dior Sauvage"
                               FontWeight="Bold"
                               FontSize="16"/>
                            <TextBlock Text="100 ml"
                               Foreground="Gray"
                               Margin="0,5"/>
                            <TextBlock Text="12 500 ₽"
                               FontWeight="Bold"
                               FontSize="18"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </ScrollViewer>
        
        <!--Страница регистрации и логина-->
        <Frame x:Name="LoginPage"
           Grid.Row="0"
           Grid.RowSpan="3"
           NavigationUIVisibility="Hidden"
           Background="#80000000"
           Visibility="Collapsed"
           MouseLeftButtonDown="OverlayFrame_MouseLeftButtonDown"/>

    </Grid>
</Window>
