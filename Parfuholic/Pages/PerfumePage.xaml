<Page x:Class="Parfuholic.Pages.PerfumePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="60,40,60,40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ЧАСТЬ — ФОТО -->
        <Grid>
            <Image x:Name="PerfumeImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,50,0"/>
        </Grid>

        <!-- ПРАВАЯ ЧАСТЬ — ИНФОРМАЦИЯ -->
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <TextBlock Text="ПАРФЮМЕРНАЯ ВОДА"
                           Foreground="Gray"
                           FontSize="12"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="NameText"
                           FontSize="32"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="BrandText"
                           FontSize="18"
                           Foreground="Gray"
                           Margin="0,5,0,20"/>

                <!-- Цена -->
                <TextBlock x:Name="PriceText"
                           FontSize="26"
                           FontWeight="SemiBold"
                           Margin="0,20,0,20"/>

                <!-- Кнопки "Добавить в корзину" и "+" -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="ДОБАВИТЬ В КОРЗИНУ"
                            Height="50"
                            Width="250"
                            Background="Black"
                            Foreground="White"
                            FontSize="16"
                            BorderThickness="0"/>
                    <Button Content="+"
                            Height="50"
                            Width="50"
                            Background="Black"
                            Foreground="White"
                            FontSize="16"
                            BorderThickness="0"
                            Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Динамические кнопки объёмов -->
                <StackPanel x:Name="VolumeButtonsPanel"
                            Orientation="Horizontal"
                            Margin="0,0,0,20"/>

                <!-- Характеристики -->
                <TextBlock Text="подробные характеристики"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="16" Text="для кого" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Column="2" x:Name="ForWhomText"/>

                    <TextBlock FontSize="16" Grid.Row="1" Text="группа ароматов" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Row="1" Grid.Column="2" x:Name="AromaGroupText"/>

                    <TextBlock FontSize="16" Grid.Row="2" Text="базовые ноты" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Row="2" Grid.Column="2" x:Name="BaseNotesText"/>

                    <TextBlock FontSize="16" Grid.Row="3" Text="средние ноты" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Row="3" Grid.Column="2" x:Name="MiddleNotesText"/>

                    <TextBlock FontSize="16" Grid.Row="4" Text="верхние ноты" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Row="4" Grid.Column="2" x:Name="TopNotesText"/>

                    <TextBlock FontSize="16" Grid.Row="5" Text="объём" Foreground="Gray"/>
                    <TextBlock FontSize="16" Grid.Row="5" Grid.Column="2" x:Name="VolumeText"/>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
