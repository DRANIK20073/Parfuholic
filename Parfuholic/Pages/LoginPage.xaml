<Page x:Class="Parfuholic.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход"
      MinWidth="1280"
      MinHeight="800">

    <!-- Затемнённый фон -->
    <Grid Background="#80000000"
          MouseLeftButtonDown="BackgroundGrid_MouseLeftButtonDown">

        <!-- Белый контейнер -->
        <Grid Width="700"
              Height="450"
              Background="White"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              MouseLeftButtonDown="ContainerGrid_MouseLeftButtonDown">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Войти"
                       FontSize="36"
                       FontWeight="Bold"
                       Margin="60,50,60,30"/>

            <StackPanel Grid.Row="1" Margin="60,0,60,60">

                <!-- ЛОГИН -->
                <Grid Margin="0,0,0,30">
                    <TextBox x:Name="LoginBox"
                             FontSize="18"
                             Height="40"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"/>

                    <!-- Placeholder -->
                    <TextBlock Text="Логин или Email"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=LoginBox}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- ПАРОЛЬ -->
                <Grid Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="18"
                                 Height="40"
                                 BorderThickness="0,0,0,1"
                                 Padding="5,8,5,0"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Placeholder -->
                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Пароль"
                               FontSize="18"
                               Margin="5,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- Ссылка на регистрацию -->
                <TextBlock Margin="0,0,0,40">
                    <Run Text="У вас еще нет аккаунта? "/>
                    <Hyperlink x:Name="RegisterLink"
                               Foreground="Black"
                               TextDecorations="Underline">
                        Зарегистрируйтесь
                    </Hyperlink>
                </TextBlock>

                <!-- Кнопка входа -->
                <Button Content="Войти"
                        Height="50"
                        Width="200"
                        FontSize="18"
                        BorderThickness="2"
                        Background="White"
                        HorizontalAlignment="Right"
                        Click="Login_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
