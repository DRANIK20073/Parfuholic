<Page x:Class="Parfuholic.Pages.AdminOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заказы пользователей">

    <Grid Background="#FFF5F5F5" Margin="10">
        <TextBlock Text="Список заказов"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <DataGrid x:Name="OrdersDataGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Orders}"
                  RowDetailsVisibilityMode="VisibleWhenSelected"
                  CanUserAddRows="False"
                  Margin="0,40,0,40">

            <!-- Колонки заказов -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderID}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalSum}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Статус">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedItem="{Binding Status, Mode=TwoWay}"
                                      Loaded="StatusComboBox_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <!-- Детали заказа -->
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,5,0,5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding Perfume.Name}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Кнопка сохранить -->
        <Button Content="Сохранить изменения" Height="35" Width="180" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="0,0,10,10"
                Click="SaveChangesButton_Click"/>
    </Grid>
</Page>
