<Page x:Class="Parfuholic.Pages.ManagePerfumesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Управление парфюмами"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <DataGrid x:Name="PerfumesGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  RowHeight="40"
                  FontSize="14">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="150"/>
                <DataGridTextColumn Header="Для кого" Binding="{Binding ForWhom}" Width="120"/>
                <DataGridTextColumn Header="Арома-группа" Binding="{Binding AromaGroup}" Width="180"/>

                <DataGridTextColumn Header="Верхние ноты" Binding="{Binding TopNotes}" Width="200"/>
                <DataGridTextColumn Header="Средние ноты" Binding="{Binding MiddleNotes}" Width="200"/>
                <DataGridTextColumn Header="Базовые ноты" Binding="{Binding BaseNotes}" Width="200"/>

                <DataGridTextColumn Header="Объём" Binding="{Binding Volume}" Width="100"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>

                <!-- Кнопка сохранить -->
                <DataGridTemplateColumn Header="Сохранить" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Сохранить"
                                    Click="SaveRow_Click"
                                    Height="30"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
