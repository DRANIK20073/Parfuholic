<Page x:Class="Parfuholic.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="500"
        Width="700"
        Background="White">

    <Grid Margin="60">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Регистрация"
                   FontSize="36"
                   FontWeight="Normal"/>

        <StackPanel Grid.Row="1" Margin="0,40,0,0">

            <!-- Логин -->
            <Grid Margin="0,0,0,30">
                <TextBox x:Name="UserNameBox"
             FontSize="18"
             Height="40"
             BorderThickness="0,0,0,1"
             VerticalContentAlignment="Center"/>

                <TextBlock Text="Логин"
                       Margin="5,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=UserNameBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- EMAIL -->
            <Grid Margin="0,0,0,30">
                <TextBox x:Name="EmailBox"
             FontSize="18"
             Height="40"
             BorderThickness="0,0,0,1"
             VerticalContentAlignment="Center"/>

                <TextBlock Text="Email"
               Margin="5,0"
               VerticalAlignment="Center"
               Foreground="Gray"
               IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=EmailBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- ПАРОЛЬ -->
            <Grid Margin="0,0,0,20">
                <PasswordBox x:Name="PasswordBox"
                 FontSize="18"
                 Height="40"
                 BorderThickness="0,0,0,1"/>

                <TextBlock Text="Пароль"
               Margin="5,0"
               VerticalAlignment="Center"
               Foreground="Gray"
               IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>


            <!-- Текст -->
            <TextBlock Margin="0,0,0,26">
                <Run Text="Уже есть аккаунт? "/>
                <Run Text="Войти"
                     Cursor="Hand"
                     TextDecorations="Underline"
                     />
            </TextBlock>

            <!-- Кнопка -->
            <Button Content="Зарегистрироваться"
                    Height="50"
                    FontSize="18"
                    
                    BorderThickness="2"
                    Background="White"
                    Width="260"
                    HorizontalAlignment="Right"/>

        </StackPanel>
    </Grid>
</Page>
